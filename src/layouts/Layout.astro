---
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative text-white/80 sm:mx-4">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen h-full w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />

    <style is:global>
      :root {
        color-scheme: light dark;
        /* overflow-x: hidden; */
      }
      html {
        font-family: system-ui, sans-serif;
        scroll-behavior: smooth;
      }
      body {

        /* color: rgba(17, 17, 17, 0.9); */
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }
    </style>
  </body>
</html>
