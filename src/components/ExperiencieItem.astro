---
import LinkButton from "./LinkButton.astro";

interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
  tasks: string[];
}

const { title, description, link, date, tasks } = Astro.props;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-500"
>
</div>
<time class="mb-1 text-m font-normal leading-none text-sky-200/80">
  {date}
</time>
<h3 class="text-lg font-semibold text-yellow-200 mt-2">
  {title}
</h3>
<span class="mb-4 text-base font-normal text-pretty ">
  <strong> {description} </strong>
</span>
<ul class="mb-4 text-base font-normal text-pretty ml-8">
  { tasks.map((task: string) => (
    <li class="list-disc" > { task } </li>
  ))}
</ul>
{
  link && (
    <LinkButton href={link}>
      More...
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </LinkButton>
  )
}
